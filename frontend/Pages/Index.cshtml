@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="/Create">building Web apps with ASP.NET Core</a>.</p>
</div>

Weather Forecast:

<table class="table">
    <thead>
        <tr>
            <th>No</th>
            <th>Profile</th>
            <th>Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Phone Number</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{var no=1;}
        @foreach (var forecast in @Model.Customers)
        {
            <tr>
                <td>@no</td>
                <td>@forecast.Profile</td>
                <td>@forecast.FirstName @forecast.LastName</td>
                <td>@forecast.Email</td>
                <td>@forecast.Address</td>
                <td>@forecast.PhoneNumber</td>
                <td>
                    <a asp-page="/Edit" asp-route-id="@forecast.id">Edit</a>
                    <a href="/employee/@forecast.id" class="btn btn-danger text-white">Delete</a>
                </td>
            </tr>
            no++;
        }
    </tbody>
</table>